                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@color/on_primary">
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Item Code"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="HS Code"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="Item Name"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Part Number"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:text="Unit"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Approved (Req) Qty"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Order Qty"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Balance Qty"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Unit Price"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Amount"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Vat (%)"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Vat"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="Vat Amount"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:background="@color/on_primary"
                                        android:gravity="center"/>
                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/added_item_po_for_po_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:scrollbars="vertical"
                                        android:descendantFocusability="beforeDescendants"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"

                                        />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@android:color/darker_gray">
                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"/>
                                    <TextView
                                        android:id="@+id/req_all_item_order_qty_for_po"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black"
                                        android:gravity="center"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"/>
                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/darker_gray"/>
                                    <TextView
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="2dp"
                                        android:paddingTop="3dp"
                                        android:paddingEnd="2dp"
                                        android:paddingBottom="3dp" />
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"/>
                                    <TextView
