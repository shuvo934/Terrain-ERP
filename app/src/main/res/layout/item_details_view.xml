<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/back_color"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:id="@+id/serial_no"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="SL NO"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/item_code"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Item Code"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/item_reference_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_unit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_vat_amnt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="VAT(%)"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_purchase_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Purchase Amount"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_sales_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sales Price"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_hs_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="HS Code"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />


</LinearLayout>

