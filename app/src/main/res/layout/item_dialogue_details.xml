<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/back_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">
            <TextView
                android:id="@+id/item_name_from_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/russo_one"
                android:text="Relations"
                android:textColor="@color/on_primary"
                android:textSize="16sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Work Order Date: "
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".5"
                android:gravity="end"
                android:textColor="@color/on_primary"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/w_o_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="01-Jan-2021"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/on_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="2.5dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Work Order Quantity: "
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:layout_weight=".5"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/w_o_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20 btl"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Work Order Rate: "
                    android:layout_weight=".5"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/w_o_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="20 BDT"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:background="@color/on_primary"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Work Order Amount: "
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".5"
                android:gravity="end"
                android:textColor="@color/on_primary"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/w_o_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="400 BDT"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/on_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="2.5dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Received Quantity: "
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight=".5"
                    android:gravity="end"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/r_o_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10 btl"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="1"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Received Amount: "
                    android:layout_marginStart="5dp"
                    android:layout_weight=".5"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/r_o_amnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="200 BDT"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/on_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="2.5dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Receivable Quantity: "
                    android:layout_marginStart="5dp"
                    android:layout_weight=".5"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/r_o_bl_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10 btl"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Receivable Amount: "
                    android:layout_marginStart="5dp"
                    android:layout_weight=".5"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:textColor="@color/on_primary"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/r_o_bl_amnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="200 BDT"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>