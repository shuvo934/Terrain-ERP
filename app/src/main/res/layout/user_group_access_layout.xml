<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/user_group_access_check_box"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="@color/primary_variant"
         />

    <TextView
        android:id="@+id/name_of_the_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:text="Work Order"
        android:paddingEnd="5dp"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_medium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/group_access_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@color/white"
        style="@style/Widget.AppCompat.Button"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_24"
            app:tint="@color/primary_variant"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>