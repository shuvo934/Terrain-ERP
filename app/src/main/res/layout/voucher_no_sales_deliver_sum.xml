<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/back_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/voucher_no_sds"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Voucher No"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textStyle="bold"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/voucher_date_sds"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Voucher Date"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/voucher_amnt_sds"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bottom_border_voucher"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected_color"
        android:orientation="horizontal" />


</LinearLayout>