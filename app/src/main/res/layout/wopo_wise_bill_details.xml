<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_adapter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="5dp"
    android:background="@color/back_color">


    <TextView
        android:id="@+id/wo_po_no_from_list"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/wo_po_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />


    <TextView
        android:id="@+id/receive_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/bill_rcv_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/vat_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/total_bill_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/bill_paid_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />
    <TextView
        android:id="@+id/payable_amnt_from_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="WO/PO No"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp" />


</LinearLayout>